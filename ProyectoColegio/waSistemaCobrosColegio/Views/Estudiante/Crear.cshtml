@model waSistemaCobrosColegio.Models.Estudiante

@{
    ViewData["Title"] = "Crear Estudiante";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}
<form asp-action="Crear" asp-controller="Estudiante" method="post">
    <div class="ms-2 mt-2 container col-sm-4">
        <div class="card">
            <div class="card-header">
                <h2>Crear Estudiante</h2>
            </div>
            <div class="card-body">
                <div class="mb-3 row">
                    <div class="col-sm-3">
                        <label class="form-label" asp-for="Tipo_Documento"></label>
                        <select class="form-select" asp-for="Tipo_Documento" asp-items="@ViewBag.listaTiposDocumentos"></select>
                    </div>
                    <div class="col-sm-9">
                        <label class="form-label" asp-for="Numero_Documento"></label>
                        <input class="form-control" asp-for="Numero_Documento" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-6">
                        <label class="form-label" asp-for="Nombre"></label>
                        <input class="form-control" asp-for="Nombre" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label" asp-for="Apellido"></label>
                        <input class="form-control" asp-for="Apellido" />
                    </div>
                </div>
                <div class="mb-3 col-sm-auto">
                    <label class="form-label" asp-for="Direccion"></label>
                    <input class="form-control" asp-for="Direccion" />
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-6">
                        <label class="form-label" asp-for="Telefono"></label>
                        <input class="form-control" asp-for="Telefono" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label" asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <label class="form-label" asp-for="Fecha_Nacimiento"></label>
                        <input class="form-control" type="datetime" asp-for="Fecha_Nacimiento" value="@DateTime.Now.ToShortDateString()" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label" asp-for="Genero"></label>
                        <select class="form-select" asp-for="Genero" asp-items="@ViewBag.listaGeneros"></select>
                    </div>
                    @* <div class="col-sm-3 align-content-end">
                    <input class="form-check-input" type="checkbox" asp-for="Estado" />
                    <label class="form-label" asp-for="Estado"></label>
                    </div> *@
                </div>
            </div>
            <div class="card-footer">
                <div class="mb-2 mt-2">
                    <button class="btn btn-primary" type="submit">Crear Estudiante</button>
                    <a class="ms-2" asp-action="Listar" asp-controller="Estudiante">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    if ('@ViewBag.mensajeOk' != "") {
        Swal.fire({
            title: '@ViewBag.mensajeOk',
            icon: "success"
        });
    }
    if ('@ViewBag.mensajeError' != "") {
        Swal.fire({
            title: "@ViewBag.mensajeError",
            icon: "error"
        });
    }
</script>